generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/user-client"
}

datasource db {
  provider = "mongodb"
  url      = env("USER_SERVICE_DB_URL")
}

model Image {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  file_id       String
  url           String
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])
  userProfileId String?     @unique @db.ObjectId
}

model UserProfile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique // This will store the ID from the auth-service's User model
  name      String
  email     String   @unique
  bio       String?
  picture   String?
  following String[] @default([])
  avatar    Image?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
