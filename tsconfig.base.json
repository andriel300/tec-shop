{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@prisma/product-client": ["node_modules/.prisma/product-client"],
      "@prisma/seller-client": ["node_modules/.prisma/seller-client"],
      "@tec-shop/api-gateway/*": ["apps/api-gateway/src/*"],
      "@tec-shop/auth-client": ["libs/prisma-clients/auth-client/src/index.ts"],
      "@tec-shop/auth-prisma-client": ["node_modules/.prisma/auth-client"],
      "@tec-shop/auth-service/*": ["apps/auth-service/src/*"],
      "@tec-shop/dto": ["libs/shared/dto/src/*"],
      "@tec-shop/product-client": [
        "libs/prisma-clients/product-client/src/index.ts"
      ],
      "@tec-shop/product-prisma-client": [
        "node_modules/.prisma/product-client"
      ],
      "@tec-shop/seller-client": [
        "libs/prisma-clients/seller-client/src/index.ts"
      ],
      "@tec-shop/seller-prisma-client": ["node_modules/.prisma/seller-client"],
      "@tec-shop/seller-service/*": ["apps/seller-service/src/*"],
      "@tec-shop/shared-validation": ["libs/shared/validation/src/index.ts"],
      "@tec-shop/user-client": ["libs/prisma-clients/user-client/src/index.ts"],
      "@tec-shop/user-prisma-client": ["node_modules/.prisma/user-client"],
      "@tec-shop/user-service/*": ["apps/user-service/src/*"],
      "@tec-shop/user-ui/*": ["apps/user-ui/src/*"]
    }
  }
}
