{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@tec-shop/shared/exceptions": ["libs/shared/exceptions/src/index.ts"],
      "@tec-shop/shared/middleware": ["libs/shared/middleware/src/index.ts"],
      "@tec-shop/user-ui/*": ["apps/user-ui/src/*"]
    }
  }
}
