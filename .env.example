# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:8080/api/auth/google/callback"

# Redis Configuration
REDIS_URL="your-redis-connection-string"

# Database URLs
AUTH_SERVICE_DB_URL="your-auth-database-url"
USER_SERVICE_DB_URL="your-user-database-url"
ANALYTICS_SERVICE_DB_URL="your-analytics-database-url"

# SMTP Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@yourapp.com
SMTP_SECURE=true

# Service URLs (use relative paths in production)
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8080"
NEXT_PUBLIC_BACKEND_URL="http://localhost:8080"
NEXT_PUBLIC_WS_URL="localhost:6007"

# Security Keys (generate strong secrets for production)
JWT_SECRET="your-jwt-secret-at-least-32-characters-long"

# Microservice Configuration
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=6001
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=6002
SELLER_SERVICE_HOST=localhost
SELLER_SERVICE_PORT=6003
CHATTING_SERVICE_HOST=localhost
CHATTING_SERVICE_PORT=6007
CHATTING_SERVICE_TCP_PORT=6010

# Kafka Configuration
# For local development (no authentication):
KAFKA_BROKER="localhost:9092"
KAFKA_CLIENT_ID="tec-shop"

# SSL is auto-detected: disabled for localhost/127.0.0.1, enabled for remote brokers
# To override SSL detection, use KAFKA_SSL=true or KAFKA_SSL=false
# KAFKA_SSL=false

# For production/cloud Kafka (with SCRAM-SHA-256 authentication):
# Uncomment and configure these when using cloud Kafka (RedPanda, Confluent, etc.)
# Note: SSL is automatically enabled for remote brokers when credentials are provided
# KAFKA_BROKER="your-kafka-broker-address:9092"
# KAFKA_USERNAME="your-kafka-username"
# KAFKA_PASSWORD="your-kafka-password"

# Legacy RedPanda variables (backward compatibility - will be deprecated)
# These are still read if KAFKA_* variables are not set
# REDPANDA_BROKER="your-redpanda-broker-address:9092"
# REDPANDA_USERNAME="your-redpanda-username"
# REDPANDA_PASSWORD="your-redpanda-password"

# Logging Configuration
LOG_LEVEL=info
